
@page "/statuspage"
@namespace BlazorServer.Pages
@inject TypeService TypeService
@inject StatusService StatusService

<div class="row">
  <div class="col-4">
    <h5>Select Type</h5>
    <InputSelect @bind-Value="_selectedType" class="form-select" @onchange="OnTypeChanged">
      <option value="">-- select --</option>
      @foreach (var t in _types)
      {
        <option value="@t.TypeCode">@t.DisplayName</option>
      }
    </InputSelect>
  </div>
  <div class="col-8">
    @if (!string.IsNullOrWhiteSpace(_selectedType))
    {
      <ul class="list-group">
        @foreach (var s in _statuses)
        {
          <li class="list-group-item">@s.StatusCode</li>
        }
      </ul>
      <button class="btn btn-primary mt-2">+ Add Status</button>
    }
  </div>
</div>

@code {
    private List<TypeDto> _types = new();
    private string _selectedType = "";
    private List<StatusDto> _statuses = new();

    protected override async Task OnInitializedAsync()
    {
        _types = (await TypeService.GetAllAsync()).ToList();
    }

    private async Task OnTypeChanged(ChangeEventArgs e)
    {
        _selectedType = e.Value?.ToString() ?? "";
        _statuses = await StatusService.GetByTypeAsync(_selectedType);
        StateHasChanged();
    }
}
